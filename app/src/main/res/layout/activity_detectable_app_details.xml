<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetectableAppDetailsActivity"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/detectable_app_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_floating_material_dark"
        android:clickable="true"
        android:onClick="activateDetectableApp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Activate"
            android:id="@+id/detectable_app_activate_text"
            android:layout_gravity="center_vertical"
            android:textColor="@color/abc_primary_text_material_dark"
            android:layout_marginLeft="16dp"
            android:clickable="true"
            android:onClick="activateDetectableApp" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detectable_app_activate_switch"
            android:layout_gravity="right"
            android:checked="false"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp" />
    </FrameLayout>

    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="de.uni_bonn.detectappscreen.AppUsageDataListFragment"
        android:id="@+id/fragment_app_usage_data_file_list"
        android:layout_gravity="center_horizontal"
        tools:layout="@android:layout/list_content" />

</LinearLayout>
